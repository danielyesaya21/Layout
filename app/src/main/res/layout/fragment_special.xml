<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SpecialFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@color/coloWhite"
        android:padding="10dp">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/specialdua"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="Spesial untuk Anda"
            android:textColor="@color/colorBlack"
            android:textSize="10sp"
            android:textStyle="bold">


        </TextView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:text="Lihat Semua"
            android:textColor="@color/colorRed"
            android:textSize="8sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/paket"
            android:layout_width="397dp"
            android:layout_height="130dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="35dp" />

        <com.kingfisher.easyviewindicator.RecyclerViewIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paket"
            android:layout_marginTop="5dp"
            app:avi_animation_enable="false"
            app:avi_drawable="@drawable/indicatoron"
            app:avi_drawable_unselected="@drawable/indicatoroff"
            app:avi_gravity="fill"
            app:avi_height="8dp"
            app:avi_width="8dp" />

    </RelativeLayout>

</FrameLayout>